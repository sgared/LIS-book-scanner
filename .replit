language = "python3"
run = "python main.py"

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "bash setup_replit.sh"]

[env]
VIRTUAL_ENV = "/home/runner/${REPL_SLUG}/venv"
PATH = "${VIRTUAL_ENV}/bin"
PYTHONPATH = "$PYTHONHOME/lib/python3.10:${VIRTUAL_ENV}/lib/python3.10/site-packages"
MPLBACKEND = "Agg"
FLASK_APP = "server-side/app_production.py"
FLASK_ENV = "development"

[packager]
language = "python3"
ignoredPaths = ["venv", ".config", "Poetry", "__pycache__"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "setup_replit.sh"]