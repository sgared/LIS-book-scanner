language = "python3"
run = "cd server-side && python app_production.py"

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "cd server-side && python app_production.py"]

[packager]
ignoredPaths = ["venv", ".config", "Poetry"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "server-side/app_production.py"]

[debugger]
support = true

[debugger.interactive]
transport = "localhost:5000"
startCommand = ["dap-python", "server-side/app_production.py"]

[debugger.interactive.integratedAdapter]
dapTcpAddress = "localhost:0"
dapTcpPort = 5678
transport = "tcp"